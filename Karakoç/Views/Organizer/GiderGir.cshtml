@model List<Karakoç.Models.Calisan>
@{
    ViewData["Title"] = "GiderGir";
    Layout = "~/Views/Shared/_OrLayout.cshtml";
}


<div class="container mt-5">
    <h2 class="mb-4 main-title">Gider Ekleme Ekranı</h2>
    <form id="giderForm" action="/Organizer/KaydetGider" method="post">
        <div class="mb-3">
            <label for="CalisanId" class="form-label">Çalışan:</label>
            <select name="CalisanId" id="CalisanId" class="form-select">
                <option value="">Çalışan Seçin</option>
                @foreach (var calisan in Model)
                {
                    <option value="@calisan.CalısanId">@calisan.Name @calisan.Surname</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="Aciklama" class="form-label">Açıklama:</label>
            <input type="text" name="Aciklama" id="Aciklama" class="form-control" placeholder="Gider açıklaması" />
        </div>

        <div class="mb-3">
            <label for="Tutar" class="form-label">Tutar:</label>
            <input type="number" name="Tutar" id="Tutar" step="0.01" class="form-control" placeholder="Gider tutarı" />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>


        <p style="color:green;"> @ViewBag.Onay </p>
    </form>

    <br />
    <button class="btn btn-primary" onclick="GetGider()">Giderleri Listele</button>

</div>





<script>
    function logOut() {
        window.location.href = '@Url.Action("LogOut", "Login")';
    }
    function GetGider() {
        window.location.href = '@Url.Action("Giderler", "Admin")';
    }

</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById("giderForm").addEventListener("submit", function (event) {
        const calisanSelect = document.getElementById("CalisanId");
        if (calisanSelect.value === "") {
            event.preventDefault(); // Formun gönderilmesini engeller
            alert("Lütfen bir çalışan seçiniz.");
        }
    });
</script>

